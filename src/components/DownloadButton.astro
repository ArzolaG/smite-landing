<a href="#download" class="download">
    <span class="download-button">Download</span>
</a>

<style>
    a {
        font-size: 20px;
        text-transform: uppercase;
        display: inline-block;
    }
    .download {
        font-weight: bold;
        position: relative;
        z-index: 20;
        padding: 16px 8px;
        transition: 0.2s all ease;
    }

    .download-button {
        background-color: rgba(255, 213, 61, 0.65);
        padding: 10px 30px;
        cursor: pointer;
        transition: 0.3s all ease;
    }
    .download:hover .download-button {
        background-color: rgba(255, 213, 61, 0.4);
    }

    .download::before,
    .download::after {
        content: "";
        display: block;
        position: absolute;
        transition: 0.3s all ease;
        width: 80%;
        height: 50%;
        border: 1px solid transparent;
    }
    .download::before {
        border-left: 1px solid #fff;
        border-bottom: 1px solid #fff;
        left: 0;
        bottom: 0;
    }
    .download::after {
        border-right: 1px solid #fff;
        border-top: 1px solid #fff;
        top: 0;
        right: 0;
    }

    .download:hover::before,
    .download:hover::after {
        height: 75%;
        width: 50%;
    }

    .download:active::before {
        transform: translate(5%, -8%);
    }
    .download:active::after {
        transform: translate(-5%, 8%);
    }

    @media (max-width: 640px) {
        a {
            font-size: 16px;
        }
        .download-button {
            padding: 10px 18px;
        }
    }
</style>
