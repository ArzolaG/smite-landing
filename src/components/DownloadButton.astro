<a href="#download" class="download">
    <span class="download-button">Download</span>
</a>

<style>
    a {
        font-size: 20px;
        text-transform: uppercase;
        display: inline-block;
    }
    .download {
        font-weight: bold;
        position: relative;
        z-index: 20;
        padding: 16px 8px;
    }

    .download-button {
        background-color: rgba(255, 213, 61, 0.65);
        padding: 10px 30px;
        cursor: pointer;
        transition: 0.3s all ease;
    }
    .download:hover .download-button {
        background-color: rgba(255, 213, 61, 0.4);
    }

    .download::before,
    .download::after {
        content: "";
        display: block;
        position: absolute;
        right: 0;
        left: 0;
        height: calc(50% - 8px);
        border: 1px solid #fff;
        transition: all 0.15s ease;
    }
    .download::before {
        top: 0;
        border-bottom-width: 0;
    }

    .download::after {
        bottom: 0;
        border-top-width: 0;
    }
    .download:active::before,
    .download:active::after {
        right: 3px;
        left: 3px;
    }

    .download:active::before {
        top: 3px;
    }

    .download:active::after {
        bottom: 3px;
    }

    @media (max-width: 640px) {
        a {
            font-size: 16px;
        }
        .download-button {
            padding: 10px 18px;
        }
    }
</style>
