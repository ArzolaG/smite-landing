---
const SOCIALS = [
    {
        id: "twitter",
        name: "Twitter",
        url: "https://twitter.com/smitegame",
    },
    {
        id: "youtube",
        name: "YouTube",
        url: "https://youtube.com/user/smitegame",
    },
    {
        id: "discord",
        name: "Discord",
        url: "https://discord.gg/smitegame",
    },
    {
        id: "twitch",
        name: "Twitch",
        url: "https://twitch.tv/smitegame",
    },
];
---

<div class="flex gap-2 sm:gap-5">
    {
        SOCIALS.map(({ id, name, url }) => (
            <a href={url}>
                <img
                    class="max-w-[28px] sm:max-w-[43px] opacity-70 hover:opacity-90 transition-all duration-200"
                    src={`/svg/${id}.svg`}
                    alt={`${name} Logo`}
                />
            </a>
        ))
    }
</div>
