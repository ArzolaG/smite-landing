---
const SOCIALS = [
    {
        id: "twitter",
        name: "Twitter",
        url: "https://twitter.com/smitegame",
    },
    {
        id: "youtube",
        name: "YouTube",
        url: "https://youtube.com/user/smitegame",
    },
    {
        id: "discord",
        name: "Discord",
        url: "https://discord.gg/smitegame",
    },
    {
        id: "twitch",
        name: "Twitch",
        url: "https://twitch.tv/smitegame",
    },
];
---

<div class="flex gap-5 lg:gap-3 2xl:gap-5 items-center">
    {
        SOCIALS.map(({ id, name, url }) => (
            <a href={url}>
                <img
                    class="max-w-[45px] 2xl:w-full opacity-70 hover:opacity-100 transition-all duration-200"
                    src={`/svgFooter/${id}.svg`}
                    alt={`${name} Logo`}
                />
            </a>
        ))
    }
</div>
