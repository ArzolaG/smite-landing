---
import DownloadButton from "../components/DownloadButton.astro";
import LearnMoreButton from "../components/LearnMoreButton.astro";
import Socials from "../components/Socials.astro";

const SPONSORS = [
    {
        id: "hirez",
        name: "Hi Rez",
        url: "https://www.hirezstudios.com/",
    },
    {
        id: "titan_forge",
        name: "Titan Forge",
        url: "https://www.titanforgegames.com/",
    },
];
---

<section id="home">
    <div class="flex flex-col justify-center items-center gap-10 text-center px-3 pb-14 pt-32 sm:pt-52 sm:pb-52 z-10">
        <h1 class="text-3xl sm:text-6xl lg:text-8xl uppercase font-prata 2xl:max-w-[50%]">Battleground of the Gods</h1>
        <p class="text-sm leading-4 sm:leading-normal sm:text-base lg:text-xl uppercase max-w-2xl font-montserrat">
            Experience the ultimate battlefield in Smite, where divine powers collide. Engage in strategic gameplay and lead your god to
            victory in this epic MOBA.
        </p>
        <div class="flex gap-7 items-center">
            <DownloadButton />
            <LearnMoreButton />
        </div>
    </div>
    <div class="px-5 sm:px-12 lg:px-24">
        <div class="border-solid border-t-2 py-5 border-white w-full flex justify-between">
            <Socials />
            <div class="flex gap-5 items-center">
                {
                    SPONSORS.map(({ id, name, url }) => (
                        <a href={url}>
                            <img
                                class="w-[75px] sm:w-[140px] opacity-70 hover:opacity-100 transition-all duration-200"
                                src={`/svg/${id}.svg`}
                                alt={`${name} Logo`}
                            />
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    section {
        background-image: url("/img/smite-background.webp");
        background-size: cover;
        position: relative;
    }

    section::after {
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        inset: 0;
        background-color: rgba(4, 14, 24, 0.7);
        z-index: 1;
    }
    section > * {
        position: relative;
        z-index: 2;
    }
</style>
