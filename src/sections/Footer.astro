---
import SocialsFooter from "../components/SocialsFooter.astro";

const PLATFORMS = [
    {
        id: "steam",
        name: "Steam",
        url: "https://store.steampowered.com/app/386360/SMITE/",
    },
    {
        id: "ps",
        name: "PlayStation",
        url: "https://www.playstation.com/en-us/games/smite/",
    },
    {
        id: "xbox",
        name: "Xbox",
        url: "https://www.xbox.com/en-US/games/store/smite/C2MHS238PDNS",
    },
    {
        id: "switch",
        name: "Nintendo Switch",
        url: "https://www.nintendo.com/us/store/products/smite-switch/",
    },
];
---

<footer id="play">
    <div class="flex flex-col max-w-[1024px] mx-auto text-center items-center">
        <h2 class="font-oswald text-5xl lg:text-[64px] uppercase">Play Smite on every platform</h2>
        <p class="font-montserrat text-base lg:text-xl mt-10 mb-10 lg:mb-16">
            Enjoy the world of Smite on your favorite gaming platform. With seamless cross-platform play, stunning graphics, and immersive
            gameplay, you can compete with friends and players from around the globe. Whether at home or on the go, Smite delivers the
            ultimate multiplayer online battle arena experience.
        </p>
        <div class="grid grid-cols-2 sm:flex items-center gap-10">
            {
                PLATFORMS.map(({ id, name, url }) => {
                    return (
                        <a
                            href={url}
                            class="bg-white/15 size-[100px] rounded-[5px] transition duration-300 cursor-pointer hover:bg-white/20"
                        >
                            <img class="w-[100%] p-5" src={`/svg/${id}.svg`} alt={`${name} Logo`} />
                        </a>
                    );
                })
            }
        </div>
    </div>
    <div
        class="menu flex flex-col items-center gap-10 lg:gap-0 lg:grid lg:grid-cols-3 mt-20 sm:mt-32 lg:mt-[200px] border-primary/70 border-t-[1px] pt-[45px]"
    >
        <div class=""><a href="#"><img class="w-36" src="/img/smite-logo.webp" alt="Smite Logo" /></a></div>
        <nav class="flex justify-center">
            <ul class="flex sm:flex-row items-center gap-3 sm:gap-6 2xl:gap-16 uppercase text-xl sm:text-2xl text-white/70">
                <li><a class="hover:text-white transition-all duration-300" href="#home">Home</a></li>
                <li><a class="hover:text-white transition-all duration-300" href="#news">News</a></li>
                <li><a class="hover:text-white transition-all duration-300" href="#gods">Gods</a></li>
                <li><a class="hover:text-white transition-all duration-300" href="#maps">Maps</a></li>
                <li><a class="hover:text-white transition-all duration-300" href="#download">Download</a></li>
            </ul>
        </nav>
        <div class="flex justify-end">
            <SocialsFooter />
        </div>
    </div>
</footer>

<style>
    footer {
        background-image: url(/img/footer.webp);
        background-size: cover;
        padding: 150px 80px 50px 80px;
        z-index: 1;
        position: relative;
    }
    footer::before {
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
        background: linear-gradient(180deg, rgba(4, 14, 24, 0.68) 43%, rgba(4, 14, 24, 1) 100%);
    }

    @media screen and (max-width: 1024px) {
        footer {
            padding: 80px 40px;
        }
    }
    @media screen and (max-width: 640px) {
        footer {
            padding: 40px 1.25rem;
        }
    }
</style>
