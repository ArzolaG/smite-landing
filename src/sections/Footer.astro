---
import Socials from "../components/Socials.astro";
---

<footer>
    <div class="flex flex-col gap-10 max-w-[1024px] mx-auto text-center">
        <h2 class="font-oswald text-[64px] uppercase">Play Smite on every platform</h2>
        <p class="font-montserrat text-xl">
            Enjoy the world of Smite on your favorite gaming platform. With seamless cross-platform play, stunning graphics, and immersive
            gameplay, you can compete with friends and players from around the globe. Whether at home or on the go, Smite delivers the
            ultimate multiplayer online battle arena experience.
        </p>
        <div>Platforms</div>
    </div>
    <div class="flex justify-between">
        <div class="flex-grow basis-0"><img class="sm:w-36" src="/img/smite-logo.webp" alt="Smite Logo" /></div>
        <nav>
            <ul class="flex items-center gap-16 uppercase text-xl">
                <li><a href="#home">Home</a></li>
                <li><a href="#news">News</a></li>
                <li><a href="#gods">Gods</a></li>
                <li><a href="#maps">Maps</a></li>
                <li><a href="#play">Play</a></li>
            </ul>
        </nav>
        <div class="flex-grow basis-0">
            <Socials />
        </div>
    </div>
</footer>

<style>
    footer {
        background-image: url(/img/footer.webp);
        background-size: cover;
        padding: 150px 80px 50px 80px;
        z-index: 1;
        position: relative;
    }
    footer::before {
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
        background: linear-gradient(180deg, rgba(4, 14, 24, 0.58) 43%, rgba(4, 14, 24, 1) 100%);
    }
</style>
