---
import DownloadButton from "../components/DownloadButton.astro";
---

<header class="z-10 fixed w-full flex justify-between items-center px-5 sm:px-24 py-7">
    <img class="w-32 sm:w-48" src="/img/smite-logo.webp" alt="Smite Logo" />
    <nav>
        <ul class="flex items-center gap-16 uppercase text-xl">
            <li><a href="#home">Home</a></li>
            <li><a href="#news">News</a></li>
            <li><a href="#gods">Gods</a></li>
            <li><a href="#maps">Maps</a></li>
            <li><a href="#play">Play</a></li>
            <DownloadButton />
        </ul>
    </nav>
</header>

<style>
    header::after {
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        inset: 0;
        background-color: rgba(4, 14, 24, 0.7);
        z-index: 1;
    }
    header > * {
        position: relative;
        z-index: 2;
    }
</style>
