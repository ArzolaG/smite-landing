<header class="z-10 fixed w-full flex justify-between items-center px-5 sm:px-24 py-7">
    <img class="w-32 sm:w-48" src="/img/smite-logo.webp" alt="Smite Logo" />
    <nav>
        <ul class="flex items-center gap-10">
            <li><a href="#home">Home</a></li>
            <li><a href="#news">News</a></li>
            <li><a href="#gods">Gods</a></li>
            <li><a href="#maps">Maps</a></li>
            <li><a href="#play">Play</a></li>
            <a href="#download" class="download">
                <span class="download-button">Download</span>
            </a>
        </ul>
    </nav>
</header>

<style>
    header::after {
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        inset: 0;
        background-color: rgba(4, 14, 24, 0.62);
        z-index: 1;
    }
    header > * {
        position: relative;
        z-index: 2;
    }
    a {
        font-size: 20px;
        text-transform: uppercase;
    }
    .download {
        font-weight: bold;
        position: relative;
        z-index: 20;
        padding: 16px 8px;
    }

    .download-button {
        background-color: rgba(255, 213, 61, 0.75);
        padding: 10px 30px;
        cursor: pointer;
        transition: 0.3s all ease;
    }
    .download:hover .download-button {
        background-color: rgba(235, 218, 156, 0.4);
    }

    .download::before,
    .download::after {
        content: "";
        display: block;
        position: absolute;
        right: 0;
        left: 0;
        height: calc(50% - 8px);
        border: 1px solid #fff;
        transition: all 0.15s ease;
    }
    .download::before {
        top: 0;
        border-bottom-width: 0;
    }

    .download::after {
        bottom: 0;
        border-top-width: 0;
    }
    .download:active::before,
    .download:active::after {
        right: 3px;
        left: 3px;
    }

    .download:active::before {
        top: 3px;
    }

    .download:active::after {
        bottom: 3px;
    }
</style>
