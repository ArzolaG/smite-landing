<style>
    section {
        width: 100%;
        background-image: url("/img/maze_black.png");
    }

    .map-card {
        padding: 12px;
        border: 1px solid rgb(235, 218, 156, 0.7);
        background: rgba(255, 255, 255, 0.05);
        cursor: pointer;
    }
    .map-card > div {
        display: flex;
        flex-direction: column;
    }

    .map {
        background-size: cover;
        position: relative;
        z-index: 1;
        min-height: 350px;
        max-height: 350px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .map::before {
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
        background: linear-gradient(90deg, rgba(2, 11, 19, 1) 0%, rgba(2, 11, 19, 0.7007003484987745) 70%, rgba(4, 14, 24, 0) 100%);
        opacity: 1;
        transition: 0.5s opacity ease;
    }

    .map-card:hover .map::before {
        opacity: 0.6;
    }

    .map-content {
        display: flex;
        flex-direction: column;
        opacity: 0;
        transition:
            0.3s opacity ease-in-out,
            0.3s visibility ease-in-out;
        visibility: hidden;
        position: absolute;
    }

    .map-card:hover .map-content {
        opacity: 1;
        visibility: visible;
    }
    .map-title {
        transition:
            0.3s opacity ease-in-out,
            0.3s visibility ease-in-out;
        position: relative;
        opacity: 1;
    }

    .map-card:hover .map-title {
        opacity: 0;
        visibility: hidden;
        position: absolute;
    }
</style>
